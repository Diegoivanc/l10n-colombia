<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_fiscal_position_list_name_view_tree" model="ir.ui.view">
            <field name="model">account.fiscal.position.list.name</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Regimes">
                    <field name='name'/>
                    <field name='code'/>
                </tree>
            </field>
        </record>

        <record id="account_fiscal_position_list_name_view_search" model="ir.ui.view">
            <field name="model">account.fiscal.position.list.name</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <field name="code" filter_domain="[('code','ilike',self)]"/>
               </search>
            </field>
        </record>

        <record id="account_fiscal_position_list_name_view_form" model="ir.ui.view">
            <field name="model">account.fiscal.position.list.name</field>
            <field name="arch" type="xml">
                <form string="Fiscal Regimes">
                    <group>
                        <field name='name' required='1'/>
                        <field name='code' required='1'/>
                    </group>
                </form>
            </field>
        </record>

        <record id="account_fiscal_position_list_name_action" model="ir.actions.act_window">
            <field name="name">Fiscal Regimes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.fiscal.position.list.name</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="account_fiscal_position_list_name_view_tree"/>
            <field name="search_view_id" ref="account_fiscal_position_list_name_view_search"/>
        </record>

        <menuitem id="account_fiscal_position_list_name_menu" 
            name="Fiscal Regimes"
            parent="account.account_account_menu" 
            action="account_fiscal_position_list_name_action"
            sequence="4"/>
    </data>
</odoo>