<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_partner_tax_level_code_view_tree" model="ir.ui.view">
            <field name="model">res.partner.tax.level.code</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Responsibilities">
                    <field name='name'/>
                    <field name='code'/>
                </tree>
            </field>
        </record>

        <record id="res_partner_tax_level_code_view_search" model="ir.ui.view">
            <field name="model">res.partner.tax.level.code</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <field name="code" filter_domain="[('code','ilike',self)]"/>
               </search>
            </field>
        </record>

        <record id="res_partner_tax_level_code_view_form" model="ir.ui.view">
            <field name="model">res.partner.tax.level.code</field>
            <field name="arch" type="xml">
                <form string="Fiscal Responsibilities">
                    <group>
                        <field name='name' required='1'/>
                        <field name='code' required='1'/>
                    </group>
                </form>
            </field>
        </record>

        <record id="res_partner_tax_level_code_action" model="ir.actions.act_window">
            <field name="name">Fiscal Responsibilities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.tax.level.code</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="res_partner_tax_level_code_view_tree"/>
            <field name="search_view_id" ref="res_partner_tax_level_code_view_search"/>
        </record>

        <menuitem id="res_partner_tax_level_code_action_menu" 
            name="Fiscal Responsibilities"
            parent="account.account_account_menu" 
            action="res_partner_tax_level_code_action"
            sequence="5"/>
    </data>
</odoo>